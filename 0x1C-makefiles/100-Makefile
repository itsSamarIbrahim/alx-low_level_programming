CC=gcc
CFLAGS=-Wall -Werror -Wextra -pedantic
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school

all:m.h$(SRC:.c=.o)
	$(CC) $(SRC:.c=.o) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(SRC:.c=.o)

fclean:
	$(RM) *~ $(NAME)
	$(RM) $(SRC:.c=.o)

re: oclean all

.PHONY: all clean oclean fclean re
